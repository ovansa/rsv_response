{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts", // Adjust according to your source file structure
    "playwright.d.ts" // Include your custom types file
  ]
}
